MEMORY {
    ZEROPAGE: start = $A0,           size = $10;
    UTILS:    start = __SYSUTILS-$A, size = __SYSUSIZE+$A;
}
SEGMENTS {
    ZEROPAGE: load = ZEROPAGE, type = zp;
    CODE:     load = UTILS,    type = rw;
    DATA:     load = UTILS,    type = rw;
    BSS:      load = UTILS,    type = bss;
}